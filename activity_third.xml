<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sree.mydetailspro.third_"
    android:orientation="vertical"
    android:padding="50dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Name"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=":"
            android:textSize="42px"/>
        <TextView
            android:text=" "
            android:id="@+id/name"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:textSize="42px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Mobile"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=":"
            android:textSize="42px"/>
        <TextView
            android:text=" "
            android:id="@+id/mobile"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:textSize="42px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/lbr">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Branch"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=": "
            android:textSize="42px"/>
        <TextView
            android:id="@+id/branch"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:text=" "
            android:textSize="42px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/lplc">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Place"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=":"
            android:textSize="42px"/>
        <TextView
            android:text=" "
            android:id="@+id/place"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:textSize="42px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/leml">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Email"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=":"
            android:textSize="42px"/>
        <TextView
            android:text=" "
            android:id="@+id/email"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:textSize="42px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/lbat">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Batch"
            android:textSize="42px" />
        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text=": "
            android:textSize="42px"/>
        <TextView
            android:text=" "
            android:id="@+id/batch"
            android:layout_height="50dp"
            android:layout_width="230dp"
            android:textSize="42px"/>
    </LinearLayout>

</LinearLayout>
